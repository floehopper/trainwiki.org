<% content_for :title do %>
  <title>Train Wiki - Journeys</title>
<% end %>

<table id="journeys">
  <thead>
    <tr>
      <th>Date</th>
      <th>Origin</th>
      <th>Code</th>
      <th>Departs</th>
      <th>Destination</th>
      <th>Code</th>
      <th>Arrives</th>
      <th>Link</th>
    </tr>
  </thead>
  <tbody>
    <% @journeys.each do |journey| %>
    <tr>
      <td><%= journey.departs_at.to_date %></td>
      <td><%= journey.origin_station.name %></td>
      <td><%= journey.origin_station.code %></td>
      <td><%= journey.departs_at.to_s(:time) %></td>
      <td><%= journey.destination_station.name %></td>
      <td><%= journey.destination_station.code %></td>
      <td><%= journey.arrives_at.to_s(:time) %></td>
      <td><%= link_to "link", journey %></td>
    </tr>
    <% end %>
  </tbody>
</table>